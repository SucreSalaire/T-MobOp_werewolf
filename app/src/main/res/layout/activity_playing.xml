<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PlayingActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textview_PlayerRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="0.05"
        android:text="Role ?"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp" />

    <fragment
        android:id="@+id/fragment_StoryTelling"
        android:name="com.example.t_mobop_werewolf.Frag_StoryTelling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="0.2"/>

    <fragment
        android:id="@+id/fragment_PlayersList"
        android:name="com.example.t_mobop_werewolf.Frag_PlayersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.45"/>

    <fragment
        android:id="@+id/fragment_PlayerActions"
        android:name="com.example.t_mobop_werewolf.Frag_PlayerActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="0.3"/>

</LinearLayout>

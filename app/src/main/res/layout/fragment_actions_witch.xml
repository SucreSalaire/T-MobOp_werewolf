<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_actions_witch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dayBackground2"
    tools:context=".Frag_Actions_Witch">

    <ImageView
        android:id="@+id/imageViewHunter"
        android:contentDescription="Witch icon"
        android:src="@drawable/ic_icon_witch"
        app:layout_constraintBottom_toTopOf="@+id/textViewHunterRole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/icon_style" />

    <TextView
        android:id="@+id/textViewHunterRole"
        android:text="@string/witch_role"
        app:layout_constraintBottom_toTopOf="@+id/textViewHunterOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewHunter"
        style="@style/description_textView"></TextView>

    <TextView
        style="@style/option_textView"
        android:id="@+id/textViewHunterOrder"
        android:fontFamily="@font/allerta"
        android:text="@string/witch_order"
        app:layout_constraintBottom_toTopOf="@+id/HunterActionbtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHunterRole"
        ></TextView>

    <Button
        android:id="@+id/HunterActionbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="@string/witch_action_button_potion1"
        app:layout_constraintBottom_toTopOf="@+id/buttonValidate"
        app:layout_constraintEnd_toStartOf="@+id/HunterActionbtn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHunterOrder"
        style="@style/actionButton"/>

    <Button
        android:id="@+id/HunterActionbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="@string/witch_action_button_potion2"
        app:layout_constraintBottom_toTopOf="@id/buttonValidate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HunterActionbtn1"
        app:layout_constraintTop_toBottomOf="@+id/textViewHunterOrder"
        style="@style/actionButton"/>

    <Button
        android:id="@+id/buttonValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/allerta"
        android:text="@string/witch_action_button_pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/HunterActionbtn1"
        style="@style/actionButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>